<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: name %>

  <%= f.label :percent %>
  <%= f.text_field :percent, value: percent %>

  <%= f.label :threshold %>
  <%= f.number_field :threshold, value: threshold %>

  <%= f.submit "Submit"%>
<% end %>
